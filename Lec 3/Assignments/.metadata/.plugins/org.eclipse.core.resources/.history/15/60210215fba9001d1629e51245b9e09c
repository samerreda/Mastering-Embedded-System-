#include <stdio.h>
#include <stdlib.h>

int main(void)
{
	char check_char ;
	setbuf(stdout,NULL);

	puts("Check Vowels alphapets"); /* prints Check Vowels alphapets */

	printf("Enter an alphabet: ");
	scanf("%c",&check_char);

	if (check_char==('a'||'e'||'i'||'o'||'u'))
		printf("%c is a vowel.");
	else
		printf("%c is a consonant.")

	return EXIT_SUCCESS;
}
